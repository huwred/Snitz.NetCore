@using Microsoft.Extensions.FileProviders
@using SnitzCore.BackOffice.ViewModels
@model List<AvatarViewModel>

<div class="container overflow-hidden py-6">
    <div class="grid-wrapper col mt-2">
        @foreach (var item in Model)
        {
            if (item.Path != "http://")
            {
                <div class="lc-block">
                    <figure>
                        <snitz-avatar src="@item.Path" def-src="~/images/notfound.jpg" class="img-thumbnail" data-id="@item.Id" width="100" height="100" />
                        <figcaption><i class="fa fa-trash fs-6 del-avatar" data-id="@item.Id" data-img="@item.Path"></i>@item.Name</figcaption>
                    </figure>

                </div>
                
            }
        }
    </div>
</div>



