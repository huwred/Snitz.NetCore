@{
    string? controllerName = this.ViewContext.RouteData?.Values["controller"]?.ToString();
}
<div id="uploadFileForm" class="modal-content">

    <div class="modal-header bg-primary">
        <a href="#" data-bs-dismiss="modal" aria-hidden="true" class="btn btn-outline-danger">X</a>
        <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>
    </div>
    <div class="modal-body clearfix">
        <form asp-action="UploadCSV" asp-controller="@controllerName" id="frmUploadCSV" enctype="multipart/form-data" role="form">
            <div class="mb-3">
                @if (controllerName == "LanguageManager")
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="UpdateExisting" name="UpdateExisting" value="true">
                        <label class="form-check-label" for="UpdateExisting">
                            @Localizer["resExisting"]
                        </label>
                    </div>
                }
                else
                {
                    <input type="hidden" id="UpdateExisting" name="UpdateExisting" value="true" />
                }

            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">@Localizer["btnBrowse"]</label>
                <input class="form-control" type="file" id="fileInput" name="fileInput" accept=".csv">
                <p class="form-text">@Localizer["lblCSVOnly"]</p>@Html.Raw(ViewBag.Hint)
            </div>

            <div class="mb-3">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">@Localizer["btnCancel"]</button>
                <input name="submitUpload" type="submit" id="submitUpload" value="@Localizer["btnUpload"]" class="btn btn-primary" />

            </div>

        </form>
    </div>
</div>