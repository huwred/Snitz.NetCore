            </select>
        </div>
        <div class="mb-3">
            <label class="form-label col-2">Answers</label>
        </div>
        <div class="mb-3 row">
            <div class="input-group">
                <span class="input-group-text">Order</span>
                <span class="input-group-text col-2">
                    <input class="form-control" type="number" data-val="true" data-val-number="The field Order must be a number." data-val-required="The Order field is required." id="PollAnswers_0__Order" name="PollAnswers[0].Order" type="text" value="0"/>
