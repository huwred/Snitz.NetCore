@model Poll
<form asp-action="AddPoll">
    <input type="hidden" name="CatId" id="poll-cat" value="@Model.CatId" />
    <input type="hidden" name="ForumId" id="poll-forum" value="@Model.ForumId" />
    <input type="hidden" name="TopicId" id="poll-topic" value=""/>
