@model dynamic
<div class="mb-3" id="captcha-check">
    <h5>Confirm Humanity</h5>
    <p>Before we continue, we need to confirm you are a sentient being (it's a spam thing).Please type the answer to the question in the image below and click the 'Not a Robot' button.</p>
    <div id="div-captcha" class="mb-1">
        <div class="form-group mb-3">
            <img src='data:image/Png;base64,@TempData["b64"]' id="captch-img" alt="Captcha" />
            <a href="#" title="Click to refresh" id="captcha-refresh">Reload Captcha</a>
        </div>
        <div class="form-group">
            <input type="text" name="Captcha" id="Captcha" class="form-control" placeholder="Please type your answer here" pattern="^[0-9]$" />
        </div>
    </div>
    <div class="pull-right flip">
        <button class="btn-captcha btn btn-dark" id="btn-captcha" type="button">Not a Robot</button>
    </div>
</div>
