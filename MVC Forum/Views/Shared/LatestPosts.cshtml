@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SnitzCore.Data
@model IEnumerable<MVCForum.ViewModels.Post.PostListingModel>
@inject IMember MemberService
@{
    var posts = Model;

    if (!User.IsInRole("Administrator"))
    {
        var curuser = MemberService.Current()?.Id;
        posts = posts.Where(t => t.Status < 2 || t.AuthorId == curuser);
    }
    
}
<div class="subforum latest-posts">
    <ul class="list-group">
        <li class="list-group-item subforum-title">
            <h1 id="latestPosts"><a asp-action="Active" asp-controller="Forum" title="TODO:">@Localizer["lblRecentActivity"]</a></h1>
        </li>
        @foreach (var p in posts)
        {
            var moderatedClass = $"modstatus-{p.Status}";
            if (p.UnmoderatedReplies > 0)
            {
                moderatedClass = "modstatus-2";
            }
            <li class="list-group-item @moderatedClass">
                <div class="forumLogo" style="background-image: url(@p.Forum?.ImageUrl); background-size: 100%"></div>
                <div class="postTitle">
                    <a class="latestpost-title" asp-controller="Topic" asp-action="Index" asp-route-id="@p.Id" title="@p.Title">@p.Title</a>
                    @Localizer["lblPostedBy"] <a asp-controller="Account" asp-action="Detail" asp-route-id="@p.AuthorName">@p.AuthorName</a>
                </div>
                <div class="postSubtitle">
                    @switch (p.RepliesCount)
                    {
                        case 1:
                            <span>@p.RepliesCount @Localizer["Reply"]<text>, </text></span>
                            break;
                        case 0:
                            <span>@Localizer["lblNoReplies"]<text>, </text></span>
                            break;
                        default:
                            <span>@p.RepliesCount @Localizer["lblReplies"]<text>, </text></span>
                            break;
                    }
                    <span class="postUser">
                        @if (SnitzConfig.GetIntValue("STRJUMPLASTPOST") == 1 && p.LastPostDate != null)
                        {
                            @Localizer["lblLastPost"] <lastpost-link post-date="@p.LastPostDate" topic-id="@p.Id" reply-id="@p.LatestReply" text-localizer-delegate="delegate(string s) { return Localizer[s].Value; }"></lastpost-link>
                        }
                    </span>
                </div>
            </li>
        }
    </ul>
</div>
