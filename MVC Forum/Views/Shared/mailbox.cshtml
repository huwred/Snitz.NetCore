    {
        <span class=" text-white-50 m-2 center">
            <a href="~/PrivateMessage/Inbox" class="text-white-50 nav-link" title="Open mailbox"><i class="fa fa-envelope-o fs-3"></i></a>
        </span>
    } *@

}


