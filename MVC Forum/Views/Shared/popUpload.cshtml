@model MVCForum.ViewModels.UploadViewModel
@{
    Layout = null;
    var allowedTypes = Model.AllowedTypes;
}
<p class="form-text">
    @Localizer["tipAttach"]
</p>
<p class="mb-3">
    @Localizer["maxFileSize", SnitzConfig.GetIntValue("INTMAXFILESIZE", 5)]<br/>
    @Localizer["allowedFiles", allowedTypes]
</p>

<form action="/@Model.Controller/@Model.Action/" method="post" enctype="multipart/form-data" role="form" id="upload-form" >
    <div class="photo-input mb-3">
        <input asp-for="AlbumImage" class="form-control" accept="@allowedTypes" id="aFile_upload" />
        <span asp-validation-for="AlbumImage"></span>
    </div>
