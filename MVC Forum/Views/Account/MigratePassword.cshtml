@model SnitzCore.Data.Models.ResetPasswordModel
@inject IPasswordPolicyService PasswordPolicyService
@{
    var theme = SnitzCookie.GetCookieValue("snitztheme");
    var pwdrules = PasswordPolicyService.GetPasswordRequirements();
}
<div class="container pt-0">
    <div class="center">
        <div class="m-2 bg-form">
            <div class="subforum border border-light rounded p-2">
                <h1 class="bg-dark text-bg-dark p-2">Account Migration</h1>
                <p snitz-if="@(theme != "CarpyTheme")">We've upgraded our Forum! The Forum now requires a top-secret, ultra-strong password. Create yours to proceed.</p>
                <p snitz-if="@(theme != "CarpyTheme")">
                    Your new password must meet the following requirements:
                    <ul>
                        @foreach (var rule in pwdrules)
                        {
                            <li>@rule</li>
                        }
                    </ul>
                </p>
                <p snitz-if="@(theme == "CarpyTheme")">Only the wisest anglers know: strong passwords are like secret bait recipes. Mix yours up and unlock the Forum waters.</p>
                <p snitz-if="@(theme == "CarpyTheme")">
                    Your new recipe must meet the following requirements:
                    <ul>
                        @foreach (var rule in pwdrules)
                        {
                            <li>@rule</li>
                        }
                    </ul>
                </p>
                <form asp-action="ResetPassword">
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-white"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">@Localizer["ConfirmPassword"]</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-white"></span>
                    </div>
                    <input type="text" asp-for="Username" class="form-control"   />
                    <input type="hidden" asp-for="Token" class="form-control" />
                    <div asp-validation-summary="All" class="text-white">
                        <span>Please correct the following errors</span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="Reset" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("ValidationScriptsPartial");
    }
}

