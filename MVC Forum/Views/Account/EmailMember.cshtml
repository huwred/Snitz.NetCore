@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVCForum.ViewModels.Member.EmailMemberViewModel

<div class="card">
    <div class="card-body text-dark">
        <form id="sendemail-form" method="post" asp-controller="Account" asp-action="EmailMember" class="needs-validation p-2" novalidate>
            <input asp-for="To" type="hidden" />
            <div class="mb-3">
                <label asp-for="Subject" class="form-label">@Localizer["Subject"]</label>
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Subject)
@*                 <label asp-for="Subject">@Localizer["Subject"]</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject"></span> *@
            </div>
            <div class="mb-3">
                <label asp-for="Message">@Localizer["Message"]</label>
                <textarea asp-for="Message" class="form-control email-text" id="email-text" rows="5" required="required"></textarea>
                <span asp-validation-for="Message"></span>
                <div class="invalid-feedback text-danger-emphasis">@Localizer["MessageRequired"]</div>
            </div>
@*             <div class="form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(m => m.IncludeSig, new { @class = "form-check-input" })
                    <label asp-for="IncludeSig"></label>
                </label>
            </div> *@

        </form>
    </div>
</div>