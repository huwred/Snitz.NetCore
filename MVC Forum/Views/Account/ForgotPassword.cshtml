@model SnitzCore.Data.Models.ForgotPasswordModel

<div class="container pt-0">
    <div class="center">
        <div class="m-2 bg-form">
            <div class="subforum border border-light rounded p-2">
                <h1 class="bg-dark text-white p-2">Forgot Password</h1>
                <p>Please provide the Username you used when registering.</p>
                <form asp-action="ForgotPassword" asp-controller="Account" class="p-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Username"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>                    
                    <div class="mb-3">
                        <input type="submit" value="Submit" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("ValidationScriptsPartial");
    }
}
