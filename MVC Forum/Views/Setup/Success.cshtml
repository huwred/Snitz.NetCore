@using System
@using MVCForum.ViewModels
@model DatabaseSetupViewModel
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snitz™ Forums .NET Setup Success</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/busy.css" rel="stylesheet">
    <style>
        body {
            background-color: #191970;
        }

        .container {
            background-color: #ffffff;
            color: #191970;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            max-width: 1024px;
        }



        #search-overlay {
            position: fixed;
            inset: 0;
            display: none;
            justify-content: center;
            align-items: center;
        }

        #search-overlay:before {
            content: '';
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255,255,255,0.9);
        }

        #loader {
            position:absolute;
            content: '';
            display: block;
            font-size: 20px;
            width: 1em;
            height: 1em;
            margin-top: -10em;
            -webkit-animation: spinner 1500ms infinite linear;
            -moz-animation: spinner 1500ms infinite linear;
            -ms-animation: spinner 1500ms infinite linear;
            -o-animation: spinner 1500ms infinite linear;
            animation: spinner 1500ms infinite linear;
            border-radius: 0.5em;
            -webkit-box-shadow: rgba(0, 0, 0, 0.75) 1.5em 0 0 0, rgba(0, 0, 0, 0.75) 1.1em 1.1em 0 0, rgba(0, 0, 0, 0.75) 0 1.5em 0 0, rgba(0, 0, 0, 0.75) -1.1em 1.1em 0 0, rgba(0, 0, 0, 0.5) -1.5em 0 0 0, rgba(0, 0, 0, 0.5) -1.1em -1.1em 0 0, rgba(0, 0, 0, 0.75) 0 -1.5em 0 0, rgba(0, 0, 0, 0.75) 1.1em -1.1em 0 0;
            box-shadow: rgb(255, 216, 0) 1.5em 0 0 0, rgba(255, 216, 0) 1.1em 1.1em 0 0, rgba(255, 216, 0) 0 1.5em 0 0, rgba(255, 216, 0) -1.1em 1.1em 0 0, rgba(255, 216, 0) -1.5em 0 0 0, rgba(255, 216, 0) -1.1em -1.1em 0 0, rgba(255, 216, 0) 0 -1.5em 0 0, rgba(255, 216, 0) 1.1em -1.1em 0 0;
        }

        #loader:after {
            position: absolute;
            bottom: 100%;
        }

        #loader-text {
            position: relative;
            width: 300px;
            margin: 0 auto; 
            display: block;
            font-family: sans-serif;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container mt-3">
    <div id="search-overlay">
        <div id="loader"></div>
        <div id="loader-text">Performing Upgrade tasks:<br> This may take a some time ...</div>
    </div>
    <h2>Database Configuration Complete</h2>
    <img  src="~/images/wizard.webp" alt="Snitz&amp;trade; Forums logo" loading="lazy" class="mb-3">
        <p><strong>🎉 Success!</strong><br>Your connection string has been securely saved and the initial database update is complete.</p>
        <p><strong>🚀 Next Stop: Application Restart</strong><br>To continue with the upgrade, we need to give the application a quick restart. Don’t worry—it’s painless (for the server).</p>

    <button class="btn btn-warning mt-3" id="restart-btn">
        ⚠️ Click to Restart Application
    </button>
        <p class="mt-3 text-danger fw-semibold">Click this button and—poof!—the application will disappear in a puff of digital smoke and reappear moments later, hopefully with better posture and a fresh haircut.</p>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
<script>
    $('#restart-btn').on("click",function(e){
        e.preventDefault();
        $('#search-overlay').css("display","flex");
        fetch('/api/restart/restart', { method: 'POST' });
        setTimeout(function(){ 
            $('#loader-text').html('Finished Database Upgrade:<br><h5>Redirecting to home page ... </h5>');
            setTimeout(function(){ 
                window.location = "/";
            }, 3000);
                 
        }, 10000);
        return false;
    });
</script>
</body>
</html>