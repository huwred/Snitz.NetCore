@model SnitzCore.Service.FaqQuestion

<form id="faq-form" method="post" asp-controller="Faq" asp-action="Edit" class="needs-validation p-2" novalidate data-ajax="true" data-ajax-update="#faq-content" data-ajax-success="faqcompleted">

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Category)

    <div class="input-group mb-3">
        <input type="text" name="Title" id="Title" class="form-control w-50" placeholder="Question" aria-label="Question" required value="@Model.Title">
        <span class="input-group-text">Order</span>
        <input type="number" name="Order" id="Order" class="form-control w-25" aria-label="Order" value="@Model.Order">
    </div>

    <div class="mb-3">
        <label class="control-label">Answer</label>
        <textarea name="Answer" class="form-control" id="msg-text" rows="12" required="required">@Model.Answer</textarea>
        <div class="invalid-feedback">You must provide an Answer</div>
    </div>
</form>


