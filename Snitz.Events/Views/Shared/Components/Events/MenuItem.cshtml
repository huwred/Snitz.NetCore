@using Microsoft.AspNetCore.Identity
@inject SignInManager<ForumUser> SignInManager
@model bool
@{

    var showcalendar = Model;
    showcalendar = showcalendar || (SignInManager.IsSignedIn(User) && SnitzConfig.GetIntValue("INTCALPUBLIC") == 1);

    if (!SignInManager.IsSignedIn(User) && SnitzConfig.GetIntValue("INTCALPUBLIC", 0) == 0)
        return;

}
@if (showcalendar)
{
    <li><a class="dropdown-item" asp-controller="Calendar" asp-action="Index">@Localizer["mnuCalendar"]</a></li>
}
@if (SnitzConfig.GetIntValue("INTCLUBEVENTS") == 1 && (User.Identity.IsAuthenticated))
{
    <li><a class="dropdown-item" asp-controller="Events" asp-action="Index">@Localizer["mnuEvents"]</a></li>
}