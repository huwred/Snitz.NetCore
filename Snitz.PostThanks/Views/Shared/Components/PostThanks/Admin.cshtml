@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Drawing.Text


    <div class="accordion-item">
        <h2 class="accordion-header" id="thanks-heading">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#thanks-collapse" aria-expanded="false" aria-controls="thanks-collapse">
                Post Thanks
            </button>
        </h2>
         <div id="thanks-collapse" class="accordion-collapse collapse" aria-labelledby="thanks-heading" data-bs-parent="#plugin-accordion">
            <div class="accordion-body">
                <form id="thanks-enable" asp-action="SaveFeatures" asp-controller="SnitzConfig" method="POST" data-ajax="true" data-ajax-update="#result">
                    @await Component.InvokeAsync("PostThanks", new {template="EnableButton"})
                </form> 
                <div id="result"></div>
            </div>
        </div>
    </div>